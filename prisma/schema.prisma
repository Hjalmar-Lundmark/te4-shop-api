// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  oldPrice    Float?
  image       String?
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  items Item[]
}
